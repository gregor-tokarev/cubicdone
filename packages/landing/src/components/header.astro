---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Button from "./button.astro";

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<header class="py-6">
  <div class="flex justify-between items-center mx-auto px-5 lg:px-[50px] max-w-[1440px]">
    <div class="flex items-center">
      <a href="/" class="text-gray-900 font-bold uppercase text-[24px] text-bold mr-10">cubicdone</a>
      <nav class="flex items-center gap-5 text-gray-800">
          <a href={`/${lang}/pricing`} class="transition-colors text-gray-800 hover:text-black">{t("nav.pricing")}</a>
      </nav>
    </div>
    <div class="hidden lg:flex items-center gap-2">
      <a href="https://app.cubicdone.com/auth">
          <Button color="light">{t("nav.login")}</Button>
      </a>
      <a href="https://app.cubicdone.com/auth">
          <Button>{t("nav.signup")}</Button>
      </a>
    </div>
  </div>
</header>
