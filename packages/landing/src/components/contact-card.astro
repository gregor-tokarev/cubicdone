---
import {Image} from "astro:assets";
import Button from "./button.astro";

interface Props {
  position: string;
  class?: string
}

const { position, class: className } = Astro.props;
---

<div class:list={["flex justify-between items-center py-2.5 px-4 rounded-[20px] border border-gray-400", className]}>
  <div class="flex gap-2.5 items-center">
    <Image src="/me.png" alt="founder" width="90" height="90"></Image>
    <div class="space-y-3">
      <h3 class="text-gray-800 font-normal leading-[1.2] text-[32px]">Gregor Tokarev</h3>
      <p class="text-gray-700 leading-[1.2]">{position}</p>
    </div>
  </div>
  <a href="https://t.me/gregor_tokarev" target="_blank" rel="noopener noreferrer">
    <Button>Ask a question</Button>
  </a>
</div>
